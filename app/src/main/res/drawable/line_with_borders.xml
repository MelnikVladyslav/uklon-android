<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Adjust radius to get rounded corners -->
        </shape>
    </item>

    <!-- Border -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#F2F2F2" /> <!-- Border color and width -->
            <corners android:radius="8dp" /> <!-- Adjust radius to get rounded corners -->
        </shape>
    </item>
</layer-list>