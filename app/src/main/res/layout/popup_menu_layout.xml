<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       style="@style/white_rounded_right_corners_to_dark_grey"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:elevation="15dp"
       android:orientation="vertical"
       android:paddingStart="16dp"
       android:paddingTop="45dp"
       tools:ignore="MissingConstraints,RtlSymmetry">

      <LinearLayout
          style="@style/wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingEnd="12dp"
          android:paddingBottom="40dp"
          tools:ignore="UseCompoundDrawables,UselessParent">
         <ImageView
             android:id="@+id/avatar"
             style="@style/wrap_content"
             android:background="@drawable/user_icon"
             tools:ignore="ContentDescription,ImageContrastCheck" />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingStart="15dp"
             android:paddingEnd="40dp">
            <TextView
                android:id="@+id/nameUser"
                style="@style/heavy_20"
                android:theme="@style/black_to_light_grey"
                android:text="Monica"
                tools:ignore="HardcodedText" />
            <TextView
                style="@style/regular_14"
                android:layout_marginTop="10dp"
                android:text="Edit profile"
                android:textColor="#7DB828"
                tools:ignore="HardcodedText,TextContrastCheck" />
         </LinearLayout>
         <ImageButton
             android:id="@+id/btnOption1"
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/arrow_right"
             tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="16dp"
          android:background="@drawable/line_light_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingTop="20dp"
          android:paddingEnd="12dp"
          android:paddingBottom="20dp"
          tools:ignore="UseCompoundDrawables,UselessParent">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/small_city_icon"
             tools:ignore="ContentDescription" />
         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="vertical"
             android:paddingStart="16dp">
            <TextView
                style="@style/regular_14"
                android:text="City"
                android:textColor="#A3A3A3"
                tools:ignore="HardcodedText,TextContrastCheck" />
            <TextView
                style="@style/regular_14"
                android:theme="@style/black_to_light_grey"
                android:text="Rivne"
                tools:ignore="HardcodedText" />
         </LinearLayout>
         <ImageButton
             android:id="@+id/selCityBtn"
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/arrow_right"
             tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="16dp"
          android:background="@drawable/line_light_grey" />
      <LinearLayout
          android:id="@+id/Trips"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/clock_icon"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="Trips"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/typePay"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/credit_card"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="Payment"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/tag"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="Promotion"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/heart_black"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="Favorites"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/help"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="Support"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="35dp"
          android:gravity="center_vertical"
          tools:ignore="UseCompoundDrawables">
         <ImageView
             style="@style/wrap_content"
             android:theme="@style/black_to_light_tint"
             android:background="@drawable/about"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/semibold_20"
             android:theme="@style/black_to_light_grey"
             android:layout_marginStart="15dp"
             android:text="About us"
             tools:ignore="HardcodedText"/>
      </LinearLayout>
</LinearLayout>
