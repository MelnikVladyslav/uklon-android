<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:background="@drawable/white_rounded_right"
       android:elevation="15dp"
       android:orientation="vertical"
       android:paddingStart="16dp"
       android:paddingTop="45dp"
       tools:ignore="MissingConstraints,RtlSymmetry">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingEnd="12dp"
          android:paddingBottom="40dp"
          tools:ignore="UseCompoundDrawables,UselessParent">
         <ImageView
             android:id="@+id/avatar"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:scaleType="centerCrop"
             android:adjustViewBounds="true"
             android:background="@drawable/user_icon"
             tools:ignore="ContentDescription" />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingStart="15dp"
             android:paddingEnd="40dp">

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:letterSpacing="0.04"
                android:text="Monica"
                android:textAllCaps="false"
                android:textColor="#262626"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:text="Edit profile"
                android:textAllCaps="false"
                android:textColor="#7DB828"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

         </LinearLayout>
         <ImageButton
             android:id="@+id/btnOption1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/arrow_right"
             tools:ignore="ContentDescription" />

      </LinearLayout>
         <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="16dp"
          android:background="@drawable/line_with_borders" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingTop="20dp"
          android:paddingEnd="12dp"
          android:paddingBottom="20dp"
          tools:ignore="UseCompoundDrawables,UselessParent">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/small_city_icon"
             tools:ignore="ContentDescription" />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingStart="16dp"
             android:paddingEnd="121dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:text="City"
                android:textAllCaps="false"
                android:textColor="#A3A3A3"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:text="Rivne"
                android:textAllCaps="false"
                android:textColor="#262626"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

         </LinearLayout>
         <ImageButton
             android:id="@+id/selCityBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/arrow_right"
             tools:ignore="ContentDescription" />
      </LinearLayout>
          <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="16dp"
          android:background="@drawable/line_with_borders" />
      <LinearLayout
          android:id="@+id/Trips"
        style="@style/linearlayout_pop_up_menu_horizontal"
          tools:ignore="UseCompoundDrawables">

         <ImageView
            style="@style/imageview_popup_menu"
             android:background="@drawable/clock_icon"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="Trips"
             tools:ignore="HardcodedText"/>

      </LinearLayout>
      <LinearLayout
          android:id="@+id/typePay"
          style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
          tools:ignore="UseCompoundDrawables">

         <ImageView
             style="@style/imageview_popup_menu"
             android:background="@drawable/credit_card"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="Payment"
             tools:ignore="HardcodedText"/>

      </LinearLayout>
      <LinearLayout
          style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
          tools:ignore="UseCompoundDrawables">

         <ImageView
             style="@style/imageview_popup_menu"
             android:background="@drawable/tag"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="Promotion"
             tools:ignore="HardcodedText"/>

      </LinearLayout>
      <LinearLayout
          style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
          tools:ignore="UseCompoundDrawables">

         <ImageView
             style="@style/imageview_popup_menu"
             android:background="@drawable/heart_black"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="Favorites"
             tools:ignore="HardcodedText"/>

      </LinearLayout>
      <LinearLayout
          style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
          tools:ignore="UseCompoundDrawables">

         <ImageView
             style="@style/imageview_popup_menu"
             android:background="@drawable/help"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="Support"
             tools:ignore="HardcodedText"/>

      </LinearLayout>
      <LinearLayout
          style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
          tools:ignore="UseCompoundDrawables">

         <ImageView
             style="@style/imageview_popup_menu"
             android:background="@drawable/about"
             tools:ignore="ContentDescription" />
         <TextView
             style="@style/textview_popup_menu"
             android:text="About us"
             tools:ignore="HardcodedText"/>

      </LinearLayout>

   <LinearLayout
       android:id="@+id/btnRegDr"
       style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
       tools:ignore="UseCompoundDrawables">

      <ImageView
          style="@style/imageview_popup_menu"
          android:background="@drawable/about"
          tools:ignore="ContentDescription" />
      <TextView
          style="@style/textview_popup_menu"
          android:text="Register driver"
          tools:ignore="HardcodedText"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/BtnSign"
       style="@style/linearlayout_pop_up_menu_horizontal_margin_top_0"
       tools:ignore="UseCompoundDrawables">

      <ImageButton
          style="@style/imageview_popup_menu"
          android:background="@drawable/about"
          tools:ignore="ContentDescription" />
      <TextView
          style="@style/textview_popup_menu"
          android:text="Exit"
          tools:ignore="HardcodedText"/>

   </LinearLayout>

   </LinearLayout>
