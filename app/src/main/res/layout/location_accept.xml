<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/ScreenBackground"
    android:paddingHorizontal="16dp"
    android:paddingBottom="40dp"
    android:orientation="vertical"
    android:paddingTop="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            style="@style/wrap_content"
            android:theme="@style/black_to_light_tint"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/skip"
            style="@style/regular_14"
            android:theme="@style/light_grey_to_grey_button"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:text="Skip"
            android:gravity="center"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        style="@style/wrap_content"
        android:src="@drawable/location_accept"
        tools:ignore="ContentDescription" />
    <TextView
        style="@style/bold_24"
        android:theme="@style/black_to_light_grey"
        android:text="Location access"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />
    <TextView
       style="@style/regular_12"
        android:theme="@style/black_to_light_grey"
        android:text="
It's necessary to improve your experience of using Drive. \n
For example, you won't have to enter the address of \n
the pickup point every time"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />
</LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/next"
        style="@style/green_button"
        android:text="Grant access"
        android:theme="@style/black_to_light_grey"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
</LinearLayout>