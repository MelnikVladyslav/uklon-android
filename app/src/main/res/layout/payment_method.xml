<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageButton
                android:id="@+id/back"
                style="@style/wrap_content"
                android:theme="@style/black_to_light_tint"
                android:background="@drawable/arrow_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
            <TextView
                style="@style/bold_20"
                android:theme="@style/black_to_light_grey"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingEnd="28dp"
                android:text="Payment type"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:paddingEnd="2dp"
            tools:ignore="DisableBaselineAlignment,RtlSymmetry">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">
                    <ImageView
                        style="@style/imageview_peyment_method"
                        android:background="@drawable/drive_cash"
                        tools:ignore="ContentDescription" />
                    <LinearLayout
                        style="@style/payment_method_linear_layout"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/regular_15"
                            android:theme="@style/black_to_light_grey"
                            android:text="Drive cash"
                            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
                        <TextView
                            style="@style/regular_12"
                            android:textColor="#A3A3A3"
                            android:text="UAH 60.00"
                            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry,TextContrastCheck" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/line_color_changes" />
                <LinearLayout
                    style="@style/peyment_method_horizontal_linearlayout"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        style="@style/imageview_peyment_method"
                        android:background="@drawable/google_pay"
                        tools:ignore="ContentDescription" />
                    <TextView
                        style="@style/regular_15"
                        android:theme="@style/black_to_light_grey"
                        android:text="Drive cash"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:theme="@style/line_color_changes" />
                <LinearLayout
                    style="@style/peyment_method_horizontal_linearlayout"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        style="@style/imageview_peyment_method"
                        android:background="@drawable/cash"
                        tools:ignore="ContentDescription" />
                    <TextView
                        style="@style/regular_15"
                        android:theme="@style/black_to_light_grey"
                        android:text="Cash"
                        android:layout_weight="1"
                        tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:theme="@style/line_color_changes" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="-2dp">
                <RadioGroup
                    android:id="@+id/rd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <RadioButton
                        android:id="@+id/DC"
                        style="@style/peyment_method_radiobutton"
                        android:layout_weight="1"
                        tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5.5dp"
                        android:theme="@style/line_color_changes" />

                    <RadioButton
                        style="@style/peyment_method_radiobutton"
                        android:layout_weight="1"
                        tools:ignore="TouchTargetSizeCheck" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5.5dp"
                        android:theme="@style/line_color_changes" />

                    <RadioButton
                        android:id="@+id/C"
                        style="@style/peyment_method_radiobutton"
                        android:layout_weight="1"
                        tools:ignore="TouchTargetSizeCheck" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:theme="@style/line_color_changes" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addCard"
            style="@style/peyment_method_horizontal_linearlayout"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                style="@style/imageview_peyment_method"
                android:background="@drawable/credit_card_payment_method"
                tools:ignore="ContentDescription" />
            <TextView
                style="@style/regular_15"
                android:theme="@style/black_to_light_grey"
                android:text="Add debit/credit card"
                android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:theme="@style/line_color_changes" />
        <TextView
            android:id="@+id/listCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <Button
        style="@style/green_button"
        android:text="Done"
        android:theme="@style/black_to_light_grey"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize,TouchTargetSizeCheck" />






</LinearLayout>
