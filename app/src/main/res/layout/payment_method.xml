<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="45dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_back"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:paddingEnd="25dp"
                android:text="Payment type"
                android:textAllCaps="false"
                android:textColor="#262626"
                android:textSize="20sp"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
        </LinearLayout>


<RadioGroup
    android:id="@+id/rd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingEnd="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                style="@style/imageview_peyment_method"
                android:background="@drawable/drive_cash"
                tools:ignore="ContentDescription" />
            <LinearLayout
              style="@style/payment_method_linear_layout">

                <TextView
                  style="@style/Black_bigger_textView"
                    android:text="Drive cash"
                    tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

                <TextView
                    style="@style/Grey_regular_smaller_textview"
                    android:text="UAH 60.00"
                    tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry,TextContrastCheck" />

            </LinearLayout>

            <RadioButton
                android:id="@+id/DC"
                style="@style/peyment_method_radiobutton"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
             </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_with_borders" />

        <LinearLayout
            style="@style/peyment_method_horizontal_linearlayout">
            <ImageView
                style="@style/imageview_peyment_method"
                android:background="@drawable/google_pay"
                android:importantForAccessibility="no" />
            <TextView
                    style="@style/Black_bigger_textView"
                    android:text="Drive cash"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

            <RadioButton
                style="@style/peyment_method_radiobutton"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_with_borders" />

        <LinearLayout
            style="@style/peyment_method_horizontal_linearlayout">

            <ImageView
                style="@style/imageview_peyment_method"
                android:background="@drawable/cash"
                tools:ignore="ContentDescription" />
            <TextView
                style="@style/Black_bigger_textView"
                android:text="Cash"
                android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

            <RadioButton
                android:id="@+id/C"
                style="@style/peyment_method_radiobutton"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_with_borders" />
 </RadioGroup>
        <LinearLayout
            android:id="@+id/addCard"
           style="@style/peyment_method_horizontal_linearlayout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/imageview_peyment_method"
                android:background="@drawable/credit_card_payment_method"
                tools:ignore="ContentDescription" />
            <TextView
                style="@style/Black_bigger_textView"
                android:text="Add debit/credit card"
                android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_with_borders"
            tools:ignore="MissingConstraints">
        </View>

    </LinearLayout>

    <Button
        style="@style/textview_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/start_button_background"
        android:letterSpacing="0.04"
        android:text="Add promocode"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />
</androidx.constraintlayout.widget.ConstraintLayout>
