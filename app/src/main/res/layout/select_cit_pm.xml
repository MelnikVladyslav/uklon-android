<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingTop="19dp"
       android:paddingHorizontal="16dp"
       tools:ignore="MissingConstraints">

       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/arrow_back"
           tools:ignore="ContentDescription" />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingHorizontal="9dp"
           android:paddingVertical="11dp"
           android:layout_marginTop="14dp"
           android:gravity="center_vertical">



           <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/search"
               tools:ignore="ContentDescription" />

           <EditText
               android:id="@+id/nameCity"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@null"
               android:fontFamily="@font/lato_400"
               android:letterSpacing="0.04"
               android:text="Search"
               android:layout_marginStart="12dp"
               android:textColor="#A3A3A3"
               android:textSize="16sp"
               tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
       </LinearLayout>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </LinearLayout>

    <Button
        android:id="@+id/Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="138dp"
        android:paddingVertical="16dp"
        android:background="@drawable/start_button_background"
        android:fontFamily="@font/lato_600"
        android:letterSpacing="0.04"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="#262626"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>