<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:paddingBottom="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_600"
            android:gravity="center_horizontal"
            android:letterSpacing="0.04"
            android:paddingEnd="25dp"
            android:text="Add a card"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
    </LinearLayout>
    <TextView
        style="@style/order_text_black"
        android:text="CARD NUMBER"
        android:layout_marginTop="33dp"
        tools:ignore="HardcodedText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="7dp"
          style="@style/regular_15"
                        android:textColor="#262626"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:background="@drawable/grey_light_rounded"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    <TextView
        style="@style/order_text_black"
        android:text="OWNER'S NAME"
        android:layout_marginTop="15dp"
        tools:ignore="HardcodedText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="7dp"
          style="@style/regular_15"
                        android:textColor="#262626"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:paddingStart="10dp"
        android:background="@drawable/grey_light_rounded"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <TextView
                style="@style/order_text_black"
                android:text="VALID UNTIL"
                android:layout_marginTop="15dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="7dp"
                  style="@style/regular_15"
                        android:textColor="#262626"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/grey_light_rounded"
                tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <TextView
                style="@style/order_text_black"
                android:text="CVV CODE"
                android:layout_marginTop="15dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/grey_light_rounded"
                tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_scan"
            tools:ignore="ContentDescription" />
        <TextView
              style="@style/regular_15"
                        android:textColor="#262626"
            android:text="Scan card"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <View
        style="@style/View_aditional_service"
        android:layout_marginVertical="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_face_id"
            tools:ignore="ContentDescription" />
        <TextView
              style="@style/regular_15"
                        android:textColor="#262626"
            android:text="Add face ID"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>