<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="142dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/grey_rounded"
        android:orientation="vertical"
        tools:ignore="UselessParent,TextSizeCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
               style="@style/wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="11dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oleg_blacklist"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Black_textView"
                    android:layout_marginTop="5dp"
                    android:text="Oleg"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
               style="@style/wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Black_textView"
                    android:layout_marginTop="3dp"
                    android:text="Oleg"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
                <TextView
                    style="@style/Black_textView"
                    android:layout_marginTop="3dp"
                    android:text="In Drive: 1 year"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
                <TextView
                    style="@style/Black_textView"
                    android:layout_marginTop="3dp"
                    android:text="Poizdok: 100"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/View_aditional_service"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="5dp"
            android:background="#A3A3A3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/Black_textView"
                android:text="Beige Honda Accord Tourer\n(Standard)"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
            <TextView
                style="@style/Black_textView"
                android:layout_marginStart="26dp"
                android:background="@drawable/outline_rounded"
                android:paddingHorizontal="13dp"
                android:paddingVertical="10dp"
                android:text="AT5***C"
                android:textSize="23sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>