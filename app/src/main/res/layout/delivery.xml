<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingBottom="40dp"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btnBackDel"
        style="@style/wrap_content"
        android:background="@drawable/arrow_back"
        android:layout_marginTop="38dp"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <ImageView
            style="@style/wrap_content"
            android:src="@drawable/icon_delivery"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />
    <TextView
            style="@style/bold_24"
            android:background="@null"
            android:text="Delivery"
            android:textColor="#262626"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/skip_button"
        android:gravity="center_vertical"
        tools:ignore="TextSizeCheck">
        <ImageView
            style="@style/wrap_content"
            android:background="@drawable/box"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />
        <TextView
            style="@style/regular_14"
            android:layout_marginStart="10dp"
            android:text="We deliver small-sizes items and \n cargoes up to 20kg"
            android:textColor="#262626"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/skip_button"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="TextSizeCheck">
        <ImageView
            android:id="@+id/house"
            style="@style/wrap_content"
            android:src="@drawable/house"
            android:layout_marginStart="20dp"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />
        <TextView
           style="@style/regular_14"
            android:layout_marginStart="10dp"
            android:text="Order delivery to the entrance or \neven to the apartment door "
            android:textColor="#262626"
            tools:ignore="HardcodedText" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/SendDel"
        style="@style/green_button"
        android:text="Send"
        android:textColor="#262626"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize,TouchTargetSizeCheck" />
    <Button
        android:id="@+id/Resepient"
        style="@style/green_button"
        android:layout_marginTop="10dp"
        android:background="@drawable/skip_button"
        android:text="Iâ€™m a recipient"
        android:textColor="#262626"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />
    </LinearLayout>
</LinearLayout>