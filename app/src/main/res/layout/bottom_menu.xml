<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/popup_menu_main"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:elevation="15dp"
        android:background="@drawable/white_rounded_top_corners"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription,NotSibling" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="18dp"
                android:background="@drawable/skip_button"
                tools:ignore="NotSibling,RtlSymmetry">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/location_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id = "@+id/pointStart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato_regular"
                    android:letterSpacing="0.04"
                    android:text="Gregory Skovorody\nStreet 19"
                    android:textColor="#262626"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText,NestedWeights" />

            </LinearLayout>

            <Button
                android:id="@+id/btnExtr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:padding="17dp"
                android:text="Entrance"
                android:textAllCaps="false"
                android:textColor="#262626"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            tools:ignore="DisableBaselineAlignment,NotSibling,RtlSymmetry"
            android:layout_marginTop="86dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="18dp"
                android:background="@drawable/skip_button"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_right"
                    tools:ignore="ContentDescription" />
                <EditText
                    android:id="@+id/where_to_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/lato_regular"
                    android:letterSpacing="0.04"
                    android:text="Where to go?"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/addHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skip_button"
                    android:padding="13dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/small_house"
                    tools:ignore="ContentDescription" />
                <ImageButton
                    android:id="@+id/addWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skip_button"
                    android:padding="14dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/backpack"
                    tools:ignore="ContentDescription" />
                <ImageButton
                    android:id="@+id/Like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skip_button"
                    android:padding="13dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/heart"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:background="@drawable/light_green_rounded"
            tools:ignore="NotSibling,RtlSymmetry"
            android:layout_marginTop="151dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingEnd="15dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:text="Gregory Skovorody\nStreet 19"
                android:textColor="#262626"
                android:textSize="13sp"
                android:textAllCaps="false"
                tools:ignore="HardcodedText"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/mdi_recent"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_marginTop="203dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <View
                android:id="@+id/city_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line_with_borders"
                tools:ignore="VisualLintBounds" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="11dp"
                        android:src="@drawable/delivery"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:letterSpacing="0.04"
                        android:text="Delivery"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp">
                    <ImageButton
                        android:id="@+id/driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="10dp"
                        android:src="@drawable/driver"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:letterSpacing="0.04"
                        android:text="Driver"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    >
                    <ImageButton
                        android:id="@+id/intercity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="15dp"
                        android:src="@drawable/delivery_truck"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:letterSpacing="0.04"
                        android:text="Intercity"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>