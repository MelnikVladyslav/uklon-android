<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/popup_menu_main"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/white_rounded_top_corners"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="TextSizeCheck">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/grey_line"
            tools:ignore="ContentDescription,NotSibling,ImageContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/skip_button"
                android:paddingStart="18dp"
                tools:ignore="NotSibling,RtlSymmetry">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/location_icon"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:id="@+id/pointStart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.04"
                    android:text="Gregory Skovorody\nStreet 19"
                    android:textAllCaps="false"
                    android:textColor="#262626"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,NestedWeights" />

            </LinearLayout>

            <Button
                android:id="@+id/btnExtr"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.04"
                android:padding="17dp"
                android:text="Entrance"
                android:textAllCaps="false"
                android:textColor="#262626"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,NotSibling,RtlSymmetry">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/skip_button"
                android:paddingStart="18dp">


                <ImageButton
                    android:id="@+id/showRouteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_right_grey"
                    tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/where_to_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:fontFamily="@font/lato_regular"
                    android:letterSpacing="0.04"
                    android:text="Where to go?"
                    android:textColor="#A3A3A3"
                    android:textSize="13sp"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,TextContrastCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/addHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/skip_button"
                    android:padding="13dp"
                    android:src="@drawable/small_house"
                    tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/addWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/skip_button"
                    android:padding="14dp"
                    android:src="@drawable/backpack"
                    tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/Like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/skip_button"
                    android:padding="13dp"
                    android:src="@drawable/heart"
                    tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            tools:ignore="MissingConstraints,NotSibling,RtlSymmetry" />

        <TextView
            android:id="@+id/loading"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recyclerView"
            android:text="Loading...."
            android:textSize="24sp"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/popup_menu_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="203dp"
            android:orientation="vertical"
            tools:ignore="NotSibling">

            <View
                android:id="@+id/city_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line_light_grey"
                tools:ignore="VisualLintBounds" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="11dp"
                        android:src="@drawable/delivery"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.04"
                        android:text="Delivery"
                        android:textAllCaps="false"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="10dp"
                        android:src="@drawable/driver"
                        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.04"
                        android:text="Driver"
                        android:textAllCaps="false"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/intercity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skip_button"
                        android:paddingHorizontal="35dp"
                        android:paddingVertical="15dp"
                        android:src="@drawable/delivery_truck"
                        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.04"
                        android:text="Intercity"
                        android:textAllCaps="false"
                        android:textColor="#262626"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>