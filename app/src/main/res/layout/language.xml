<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:gravity=""
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="UselessParent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            style="@style/textview_popup_menu"
            android:layout_weight="1"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="Language"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            style="@style/Black_textView"
            android:layout_weight="1"
            android:text="English"
            android:fontFamily="@font/lato_600"
            tools:ignore="HardcodedText"
            android:layout_width="0dp" />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/checkmark"
           tools:ignore="ContentDescription" />

    </LinearLayout>
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        style="@style/Black_textView"
        android:text="Українська"
        android:fontFamily="@font/lato_600"
        tools:ignore="HardcodedText" />
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"/>
    <TextView
        style="@style/Black_textView"
        android:text="Română"
        android:fontFamily="@font/lato_600"
        tools:ignore="HardcodedText" />
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginVertical="15dp"/>
    <TextView
        style="@style/Black_textView"
        android:text="Azərbaycan"
        android:fontFamily="@font/lato_600"
        tools:ignore="HardcodedText" />
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginVertical="15dp"/>
    <TextView
        style="@style/Black_textView"
        android:text="O'zbek"
        android:fontFamily="@font/lato_600"
        tools:ignore="HardcodedText" />
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginVertical="15dp"/>

</LinearLayout>