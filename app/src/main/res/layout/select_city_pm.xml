<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="19dp"
    style="@style/ScreenBackground">

       <ImageButton
        style="@style/wrap_content"
        android:background="@drawable/arrow_back"
        android:theme="@style/black_to_light_tint"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingHorizontal="9dp"
           android:layout_marginTop="25dp"
           android:gravity="center_vertical">
           <ImageButton
               style="@style/wrap_content"
               android:background="@drawable/search"
               android:theme="@style/black_to_grey_tint"
               tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />
           <EditText
               android:id="@+id/NameInput"
               style="@style/semibold_16"
               android:layout_marginStart="12dp"
               android:background="@null"
               android:hint="Search"
               android:textColorHint="#A3A3A3"
               android:theme="@style/black_to_light_grey"
               tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck" />
       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_grey"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="30dp"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </LinearLayout>


