<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:paddingBottom="40dp"
    android:orientation="vertical"
    android:paddingTop="39dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            style="@style/wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            style="@style/bold_20"
           android:textColor="#262626"
            android:gravity="center_horizontal"
            android:layout_marginEnd="28dp"
            android:text="What's your name? "
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        style="@style/bold_16"
        android:layout_width="match_parent"
        android:gravity="center"
       android:textColor="#262626"
        android:layout_marginTop="100dp"
        android:text="Let us know to properly address you"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/NameInput"
        style="@style/regular_15"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="Please enter first name"
        android:textColor="#262626"
        android:textColorHint="#A3A3A3"
        tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck,TextContrastCheck" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line_grey"/>

    <EditText
        android:id="@+id/SurnameInput"
        style="@style/regular_15"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:background="@null"
        android:hint="Please enter surname"
        android:textColor="#262626"
        android:textColorHint="#A3A3A3"
        tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck,TextContrastCheck" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/line_grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        style="@style/green_button"
        android:text="Next"
       android:textColor="#262626"
        tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

</LinearLayout>