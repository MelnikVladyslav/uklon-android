<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="38dp"
    android:paddingBottom="8dp"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UselessParent">
            <ImageButton
                android:id="@+id/backToMain"
                style="@style/wrap_content"
                android:background="@drawable/arrow_back"

                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                style="@style/bold_20"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="28dp"
                android:text="Where to go?"
               android:textColor="#262626"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
       android:id="@+id/adressLay"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="100dp"
       android:gravity="center_vertical"
       android:paddingStart="10dp"
       tools:ignore="RtlSymmetry">
       <ImageView
           style="@style/wrap_content"
           android:background="@drawable/where_to_go"
           tools:ignore="ContentDescription" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:orientation="vertical">
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                style="@style/grey_to_dark_grey_rounded"
                android:paddingHorizontal="18dp"
                android:paddingVertical="14dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    style="@style/wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/location_icon"
                    tools:ignore="ContentDescription" />
               <EditText
                   android:id="@+id/startPos"
                   style="@style/regular_15"
                   android:background="@null"
                   android:hint="Gregory Skovorody Street 19"
                   android:theme="@style/black_edittext_change"
                   tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               style="@style/grey_to_dark_grey_rounded"
               android:paddingHorizontal="18dp"
               android:paddingVertical="14dp">
               <ImageView
                   style="@style/wrap_content"
                   android:layout_marginEnd="10dp"
                   android:background="@drawable/arrow_right_grey"
                   tools:ignore="ContentDescription" />
               <EditText
                   android:id="@+id/endAdress"
                   style="@style/regular_15"
                   android:background="@null"
                   android:hint="Address"
                   android:textColorHint="#A3A3A3"
                  android:textColor="#262626"
                   tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck" />
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/adressLay"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,ObsoleteLayoutParam" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        style="@style/View_aditional_service"
        android:layout_marginBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/fluent_location"
                tools:ignore="ContentDescription" />
            <TextView
                style="@style/regular_15"
               android:textColor="#262626"
                android:layout_marginStart="10dp"
                android:text="Set location on map"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>