<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:paddingBottom="40dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="UselessParent">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            style="@style/textview_popup_menu"
            android:layout_weight="1"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="Enter password"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />

    </LinearLayout>
    <TextView
        style="@style/textview_popup_menu"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:text="Password (more than 6 characters)"
        tools:ignore="HardcodedText" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="15dp">
    <EditText
        android:id="@+id/enterPass"
        style="@style/Black_textView"
        android:layout_weight="1"
        android:background="@null"
        android:text=""
        android:textAlignment="textStart"
        android:inputType="textPassword"
        tools:ignore="Autofill,HardcodedText,InefficientWeight,LabelFor,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <ImageButton
            android:id="@+id/showPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_eye"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</LinearLayout>
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginTop="5dp" />
    <TextView
        style="@style/textview_popup_menu"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="Confirm password"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/confirmPass"
            style="@style/Black_textView"
            android:layout_weight="1"
            android:background="@null"
            android:text=""
            android:textAlignment="textStart"
            android:inputType="textPassword"
            tools:ignore="Autofill,HardcodedText,InefficientWeight,LabelFor,TextContrastCheck,TextFields,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <ImageButton
            android:id="@+id/showConPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_eye"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>
    <View
        style="@style/View_aditional_service"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginTop="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/next"
        style="@style/textview_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/start_button_background"
        android:text="Next"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />


</LinearLayout>