<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp">


        <ImageButton
            android:id="@+id/back"
            style="@style/wrap_content"
            android:theme="@style/black_to_light_tint"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp">
            <ImageView
            style="@style/wrap_content"
            android:theme="@style/black_to_light_tint"
            android:background="@drawable/coment_icon"
            android:layout_marginEnd="20dp"
                tools:ignore="ContentDescription" />

            <EditText
                style="@style/regular_15"
                android:background="@null"
                android:hint="Comment for driver"
                android:textColorHint="#A3A3A3"
                android:theme="@style/black_to_light_grey"
                tools:ignore="Autofill,HardcodedText,InefficientWeight,RtlSymmetry,TextFields,TouchTargetSizeCheck" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_grey"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="44dp"
            tools:ignore="RtlSymmetry">
        <TextView
                        style="@style/bold_15"
                        android:text="Wait near ..."
                        android:textColor="#A3A3A3"
                        android:paddingBottom="15dp"
                        android:layout_marginTop="30dp"
            tools:ignore="HardcodedText" />
        <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/light_line_color_changes"/>
        <TextView
                        style="@style/bold_15"
                        android:text="Driver through ..."
                        android:textColor="#A3A3A3"
                        android:paddingVertical="15dp"
            tools:ignore="HardcodedText" />
        <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/light_line_color_changes"/>
        <TextView
                        style="@style/bold_15"
                        android:text="Need change :"
                        android:textColor="#A3A3A3"
                        android:paddingVertical="15dp"
            tools:ignore="HardcodedText" />
        <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/light_line_color_changes"/>
        <TextView
                        style="@style/bold_15"
                        android:text="Don't call me, please "
                        android:textColor="#A3A3A3"
                        android:paddingVertical="15dp"
            tools:ignore="HardcodedText" />
        <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/light_line_color_changes"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            style="@style/green_button"
            android:text="Done"
            android:theme="@style/black_to_light_grey"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
</LinearLayout>