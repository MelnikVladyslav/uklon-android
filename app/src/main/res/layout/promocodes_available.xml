<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:paddingBottom="40dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_600"
            android:gravity="center_horizontal"
            android:letterSpacing="0.04"
            android:paddingEnd="25dp"
            android:text="Promotion "
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="25dp"
       android:gravity="center_vertical"
       tools:ignore="UseCompoundDrawables">

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/tag_grey"
           tools:ignore="ContentDescription,ImageContrastCheck" />
       <TextView
           style="@style/order_text_black"
           android:textSize="14sp"
           android:text="Enter promo code"
           android:layout_marginStart="9dp"
           tools:ignore="HardcodedText" />
   </LinearLayout>
    <View
        style="@style/View_aditional_service"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="15dp"
        android:background="#D5DDE0"/>
    <TextView
        style="@style/order_text_black"
        android:textSize="17sp"
        android:text="Your promotions"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_rounded"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/light_grey_text_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato_600"
                android:text="20% discount for 4 trips"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_white"
                tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            style="@style/light_grey_text_bold"
            android:layout_marginTop="5dp"
            android:text="Maximum promo code 30₴"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            style="@style/View_aditional_service"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#D5DDE0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_checkmark"
                tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                style="@style/light_grey_text_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Applied"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                style="@style/light_grey_text_bold"
                android:text="5 days left"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TextContrastCheck" />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/light_grey_bordered"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        tools:ignore="TextSizeCheck">

            <TextView
                style="@style/textview_popup_menu"
                android:fontFamily="@font/lato_600"
                android:text="20% discount for 5 trips"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />
            <TextView
            style="@style/Grey_regular_textview"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="Maximum promo code 30₴"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            style="@style/View_aditional_service"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#A3A3A3" />

        <TextView
            style="@style/Grey_regular_textview"
            android:textSize="14sp"
            android:fontFamily="@font/lato_600"
            android:text="Expired"
            tools:ignore="HardcodedText,TextContrastCheck" />


    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
   <Button
        style="@style/textview_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/start_button_background"
        android:text="Confirm"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />
</LinearLayout>