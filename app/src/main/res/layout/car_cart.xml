<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/typeEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_shadow"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="13dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="13dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/icon_about"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="3.5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/standard"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/placeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_600"
            android:text="Standard"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_400"
            android:text="68 â‚´ (5 min)"
            android:textAllCaps="false"
            android:textColor="#848484"
            android:textSize="13sp"

            tools:ignore="HardcodedText" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>