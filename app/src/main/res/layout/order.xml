<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="FragmentTagUsage"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_top_corners"
        android:gravity="center_horizontal"
        android:elevation="15dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_shadow"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="13dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="13dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:background="@drawable/icon_about"
                        tools:ignore="ContentDescription,RtlHardcoded" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginEnd="3.5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/standard"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/lato"
                        android:text="Standard"
                        android:textAllCaps="false"
                        android:textColor="#262626"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text="68 ₴ (5 min)"
                        android:textAllCaps="false"
                        android:textColor="#848484"
                        android:textSize="13sp"

                        tools:ignore="HardcodedText" />


                </LinearLayout>

                <LinearLayout style="@style/order_linear_layout">

                    <ImageView
                        style="@style/order_image"
                        android:background="@drawable/comfort"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/order_text_black"
                        android:text="Comfort"
                        android:layout_marginBottom="5dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/order_grey_text"
                        android:text="80 ₴ (6 min)"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout style="@style/order_linear_layout">

                    <ImageView
                        style="@style/order_image"
                        android:background="@drawable/kids"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/order_text_black"
                        android:text="Kids"
                        android:layout_marginBottom="5dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/order_grey_text"
                        android:text="88 ₴ (6 min)"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout style="@style/order_linear_layout">

                    <ImageView
                        style="@style/order_image"
                        android:background="@drawable/disabled"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/order_text_black"
                        android:text="Special"
                        android:layout_marginBottom="5dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/order_grey_text"
                        android:text="80 ₴ (9 min)"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout style="@style/order_linear_layout">

                    <ImageView
                        style="@style/order_image"
                        android:background="@drawable/cargo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/order_text_black"
                        android:text="Minibus"
                        android:layout_marginBottom="5dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/order_grey_text"
                        android:text="96 ₴ (7 min)"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>



        <View
            style="@style/View_aditional_service"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="68 ₴ "
                android:fontFamily="@font/lato_regular"
                android:textSize="32sp"
                android:textColor="#262626"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/skip_button"
                android:fontFamily="@font/lato_regular"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                android:text="10 min, 4.5 km"
                android:textColor="#848484"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <View
            style="@style/View_aditional_service"
            android:layout_marginTop="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                        <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cash"
                        android:layout_marginBottom="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Cash"
                    android:textColor="#262626"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comment"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Comment"
                    android:textColor="#262626"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Services"
                    android:textColor="#262626"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"
                    />

            </LinearLayout>


        </LinearLayout>



        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/start_button_background"
            android:fontFamily="@font/lato"
            android:letterSpacing="0.04"
            android:text="Request a ride"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintButtonSize" />



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>