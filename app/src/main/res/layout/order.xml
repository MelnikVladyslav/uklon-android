<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="FragmentTagUsage" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingStart="16dp"
        android:gravity="top|left"
        tools:ignore="RtlHardcoded,RtlSymmetry">
            <ImageButton
                android:id="@+id/button"
               style="@style/wrap_content"
                android:src="@drawable/arrow_back"
                android:background="@drawable/white_rounded"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_top_corners"
        android:gravity="center_horizontal"
        android:elevation="15dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
               style="@style/wrap_content"
                android:orientation="horizontal" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line_light_grey"
                android:layout_marginTop="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 â‚´ "
                    style="@style/semibold_32"
                   android:textColor="#262626"
                    tools:ignore="HardcodedText" />
                <TextView
                    style="@style/regular_13"
                    android:background="@drawable/skip_button"
                    android:textColor="#848484"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="7dp"
                    android:text="10 min, 4.5 km"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line_light_grey"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                tools:ignore="DisableBaselineAlignment">
                <LinearLayout
                    android:id="@+id/typePayments"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageButton
                        style="@style/wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/cash"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
                    <TextView
                        style="@style/regular_12"
                       android:textColor="#262626"
                        android:text="Cash"
                        tools:ignore="HardcodedText"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageButton
                        style="@style/wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/comment"

                        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
                    <TextView
                        style="@style/regular_12"
                       android:textColor="#262626"
                        android:text="Comment"
                        tools:ignore="HardcodedText"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/service"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageButton
                        style="@style/wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/more"

                        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
                    <TextView
                        style="@style/regular_12"
                       android:textColor="#262626"
                        android:text="Services"
                        tools:ignore="HardcodedText"/>
                </LinearLayout>
            </LinearLayout>

        <Button
            android:id="@+id/Next"
            style="@style/green_button"
            android:layout_marginTop="20dp"
            android:text="Request a ride"
           android:textColor="#262626"
            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>