<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingTop="45dp"
    android:paddingBottom="40dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_700"
            android:gravity="center_horizontal"
            android:letterSpacing="0.04"
            android:paddingEnd="25dp"
            android:text="About us"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
    </LinearLayout>

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:paddingStart="14dp">
    <TextView
        style="@style/Grey_Bold_textview"
        android:text="We are on social networks"
        android:textSize="14sp"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_facebook_about_us"
            tools:ignore="ContentDescription" />
        <TextView
            style="@style/order_text_black"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:text="We are on Facebook"
            tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_instagram"
                tools:ignore="ContentDescription" />
            <TextView
                style="@style/order_text_black"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:text="We are on Instagram"
                tools:ignore="HardcodedText,InefficientWeight,RtlSymmetry" />
        </LinearLayout>
  </LinearLayout>
    <TextView
            style="@style/Grey_Bold_textview"
            android:text="Legal information"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="14dp"
            tools:ignore="HardcodedText,TextContrastCheck" />
    <TextView
        style="@style/Black_bigger_textView"
        android:text="User agreement"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <View
        style="@style/View_aditional_service"
        android:background="#D5DDE0"
        android:layout_height="1dp"
       android:layout_marginVertical="20dp"/>
    <TextView
        style="@style/Black_bigger_textView"
        android:text="Privacy Policy"
        android:layout_marginStart="14dp"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <View
        style="@style/View_aditional_service"
        android:background="#D5DDE0"
        android:layout_height="1dp"
        android:layout_marginVertical="20dp"/>
    <TextView
        style="@style/Black_bigger_textView"
        android:text="Software license"
        android:layout_marginStart="14dp"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <View
        style="@style/View_aditional_service"
        android:background="#D5DDE0"
        android:layout_height="1dp"
        android:layout_marginVertical="20dp"/>
    <TextView
        style="@style/Grey_regular_textview"
        android:textSize="14sp"
        android:text="Program version: 7.19.1.393660"
        android:layout_marginStart="14dp"
        tools:ignore="HardcodedText,TextContrastCheck" />
</LinearLayout>
